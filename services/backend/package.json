    "eslint": "^8.55.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "eslintConfig": {
    "extends": "@bluzzi",
    "rules": {
      "camelcase": "off",
      "max-len": "off"
